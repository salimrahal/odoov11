<?xml version="1.0" encoding="UTF-8"?>
<!-- !!! this workflow no longer exists in Odoo11, -->
<openerp>
    <data>
    <!-- activities -->
        <record id="act_quotation_approved" model="workflow.activity">
            <field name="wkf_id" ref="sale.wkf_sale"/>
            <field name="name">Approved</field>
            <field name="kind">function</field>
            <field name="action">action_quotation_approve()</field>
        </record>
        
        <!-- Transition -->
        <record id="trans_quotation_draft_to_approved" model="workflow.transition">
            <field name="act_from" ref="sale.act_draft"/>
            <field name="act_to" ref="act_quotation_approved"/>
            <field name="signal">approve_quotation</field>
        </record>
        
        <!-- !! adding router is essential, otherwise is wont jump from approved to confirmed-->
         <record id="trans_approve_router" model="workflow.transition">
            <field name="act_from" ref="act_quotation_approved"/>
            <field name="act_to" ref="sale.act_router"/>
            <field name="signal">order_confirm</field>
        </record>
        
         <record id="trans_approve_sent" model="workflow.transition">
            <field name="act_from" ref="act_quotation_approved"/>
            <field name="act_to" ref="sale.act_sent"/>
            <field name="signal">quotation_sent</field>
        </record>
        
    </data>
</openerp>